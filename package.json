{
  "name": "blockstore-opfs",
  "version": "0.0.3",
  "main": "index.js",
  "type": "module",
  "keywords": [],
  "author": "dozyio",
  "license": "MIT",
  "description": "OPFS Blockstore for IPFS / Helia",
  "types": "./dist/src/index.d.ts",
  "files": [
    "!src/index-webworker-WIP.ts",
    "src",
    "dist",
    "!playwright.config.js",
    "!src/setup.ts",
    "!dist/test",
    "!**/*.tsbuildinfo",
    "!.gitignore",
    "!.prettierignore"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "eslintConfig": {
    "extends": "ipfs",
    "parserOptions": {
      "project": true,
      "sourceType": "module"
    }
  },
  "scripts": {
    "dev": "vite",
    "test": "npm run test:mainthread && npm run test:ww",
    "test:mainthread": "npm run build && playwright test test/mainthread.spec.ts",
    "test:ww": "npm run build && playwright test test/webworker.spec.ts",
    "test:ui": "playwright test --ui",
    "build": "tsc && vite build"
  },
  "dependencies": {
    "interface-blockstore": "^5.3.1",
    "interface-store": "^6.0.2",
    "it-map": "^3.1.1",
    "it-parallel-batch": "^3.0.6",
    "multiformats": "^13.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "playwright": "^1.48.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.9",
    "vite-plugin-dts": "^4.2.4"
  }
}
